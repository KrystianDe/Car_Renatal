@model Rent
@{
    ViewData["Title"] = "Index";
}

<h1>List of Rents</h1>
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Client</th>
            <th>Date From</th>
            <th>Date To</th>
            <th>Car</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in (IEnumerable<Rent>)ViewBag.Rent)
        {
            <tr>
                <td>@i.Description</td>
                <td>@i.Client</td>
                <td>@i.DateFrom.ToShortDateString()</td>
                <td>@i.DateTo.ToShortDateString()</td>
                <td>@i.Car.Model (@i.Car.RegisterNumber)</td>

            </tr>
        }
    </tbody>
</table>

<h2>Add Rent</h2>
<form method="post" asp-action="Create">

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Client"></label>
        <input class="form-control" asp-for="Client" />
        <span asp-validation-for="Client"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateFrom"></label>
        <input class="form-control" asp-for="DateFrom" type="date" />
        <span asp-validation-for="DateFrom"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateTo"></label>
        <input class="form-control" asp-for="DateTo" type="date" />
        <span asp-validation-for="DateTo"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdCar"></label>
        <select asp-for="IdCar"
                class="form-control"
                asp-items="@(new SelectList(@ViewBag.Car,"IdCar","Model"))"></select>
        <span asp-validation-for="IdCar"></span>
    </div>

    <input type="submit" value="Dodaj" />
</form>

